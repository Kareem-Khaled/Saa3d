<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Saa3d</title>
    <link rel="icon" type="image/png" href="https://res.cloudinary.com/dokcpejo1/image/upload/v1648513749/Saa3d/logo-sm.png">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/font-awesome/css/font-awesome.min.css" />
</head>
<body class="d-flex text-center">
  <div class="cover-container d-flex mx-auto">
    <main>
      <div class="row mt-5">
        <%- include('../partials/navbar') %>
      </div>

      <div class="row mt-5">
            <% for(let post of posts){ %> 
                <div class="mt-3 col-md-8 col-12">
                  <div class="card border-light mb-3">
                    <div class="card-header d-flex justify-content-between">
                      <div class="text-danger h5">@user: <%= post.author.username %> </div>
                      <% 
                          const date = post.createdAt;
                          const formattedDate = date.toLocaleString("en-GB", {
                            day: "numeric",
                            month: "short",
                            hour: "numeric",
                            minute: "2-digit"
                          });
                      %> 
                      <div class="h6"><%= formattedDate %></div>
                    </div>
                    <div class="card-body">
                      <h5 class="card-title d-flex border-bottom display-6"><%= post.header %></h5>
                      <p class="card-text h6"><%= post.body %></p>
                    </div>

                   <div class="card-footer d-flex">
                        <div class="mx-auto">
                            <i class="pointIcon fa fa-star fa-lg"></i>
                            <p class="h5"><%= post.point %></p>
                        </div>
                        <div class="mx-auto">
                          <a class = "ms-auto" href="/post/<%= post._id %>"><i class="likeIcon fa fa-comments-o fa-2x"></i></a>
                        </div>
                        <div class="mx-auto">
                            <i class="locationIcon fa fa-map-marker fa-lg ms-auto"></i>
                            <p class="h5"><%= post.city %></p>
                        </div>              
                    </div>
                 </div>
                </div>
            <% } %> 
          </div>

          <div class="fixed-top row d-none d-md-block mt-5">
          <div class="offset-9 col-3 mt-5 me-5 position-absolute top-0 end-0">
            <div class="mt-4 card border-dark mb-3">
              <div class="card-header bg-transparent border-dark d-flex">
                <div class="h6">User</div>
                <div class="ms-auto h6">Services</div>
            </div>
              <% for(let user of standing){ %> 
                <div class="card-footer bg-transparent border-dark d-flex h6 my-auto">
                  <div><%= user.username %></div>
                  <div class="ms-auto h6 my-auto"><%= user.point%></div>
                </div>
              <% } %> 

            </div>
          </div>
        </div>

        </main>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>