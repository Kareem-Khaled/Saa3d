<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saa3d</title>
    <link rel="icon" type="image/png" href="../images/logo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/font-awesome/css/font-awesome.min.css" />
</head>
<body class="d-flex text-center">
  <div class="cover-container d-flex mx-auto flex-column">
    <main>
      <div class="row">
        <%- include('../partials/navbar') %>
      </div>

      <div class="row mt-5">
            <% for(let post of posts){ %> 
                <div class="mt-3 col-md-8 col-12">
                  <div class="card border-light mb-3">
                    <div class="card-header d-flex text-danger">@user: <%= post.author.username %> </div>
                    <div class="card-body">
                      <h5 class="card-title d-flex border-bottom"><%= post.header %></h5>
                      <p class="card-text"><%= post.body %></p>
                    </div>
                    <div class="card-footer d-flex">
                      <i class="pointIcon fa fa-star fa-lg my-auto"> <p><%= post.point %></p></i>
                      <a class = "ms-auto" href="/show/<%= post._id %>"><i class="likeIcon fa fa-thumbs-up fa-lg"></i></a>
                      <i class="locationIcon fa fa-map-marker my-auto fa-lg ms-auto"> <p>Assiut</p></i>
                   </div>
                 </div>
                </div>
            <% } %> 
          </div>

          <div class="fixed-top row d-none d-md-block">
          <div class="offset-9 col-3 mt-5 me-5 position-absolute top-0 end-0">
            <div class="mt-4 card border-dark mb-3">
              <div class="card-header bg-transparent border-dark d-flex">
                <div>User</div>
                <div class="ms-auto">Services</div>
            </div>
              <% for(let user of standing){ %> 
                <div class="card-footer bg-transparent border-dark d-flex">
                  <div><%= user.username %></div>
                  <div class="ms-auto"><%= user.point%></div>
                </div>
              <% } %> 

            </div>
          </div>
        </div>

        </main>
      </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>