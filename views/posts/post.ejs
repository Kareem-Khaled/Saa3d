<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Saa3d</title>
    <link rel="icon" type="image/png" href="../images/logo-sm.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <link rel="stylesheet" href="/stylesheets/font-awesome/css/font-awesome.min.css" />
</head>
<body class="d-flex text-center">
  <div class="container">
    <main>
      <div class="row mt-5">
        <%- include('../partials/navbar') %>
      </div>
      <div class="row mt-5">
        <div class="mt-3 col-12 col-md-8 offset-md-2">
          <div class="card border-light mb-3">
           
            <div class="card-header d-flex justify-content-between border-bottom">
              <p class="text-danger h5">@user: <%= post.author.username %> </p>
              <% if(post.author.username == currentUser.username){ %> 
              <div class="dropdown">
                <i class="fa fa-ellipsis-h fa-2x" data-bs-toggle="dropdown"></i>
              <ul class="dropdown-menu">
                <li class="dropdown-item">
                  <form action="#" method="post">
                    <button class="btn" type="submit">Edit</button>
                  </form>
              </li>
                <li class="dropdown-item">
                  <form action="/post/<%= post._id %>?_method=delete" method="post">
                    <button class="btn" type="submit">Delete</button>
                  </form>
              </li>
              </ul>
            </div>
            <% } %> 
            </div>
            
            <div class="card-body">
              <h5 class="card-title d-flex border-bottom display-6"><%= post.header %></h5>
              <p class="card-text h6"><%= post.body %></p>
            </div>


            <div class="card-footer d-flex">
              <div class="mx-auto">
                  <i class="pointIcon fa fa-star fa-lg"></i>
                  <p class="h5"><%= post.point %></p>
              </div>
              <div class="mx-auto">
                  <i class="locationIcon fa fa-map-marker fa-lg ms-auto"></i>
                  <p class="h5">Assiut</p>
              </div>              
          </div>

            <form class="card-footer d-flex" method="POST" action="/post/<%= post._id %>/comments">
              <textarea class="form-control" name="comment" placeholder="Write a comment...." cols="1" rows="1" required></textarea>
              <button class="mx-1 btn btn-success btn-sm" type="submit">Comment</button>
            </form>

            <% for(let comment of post.comments){ %>
              <div class="card-footer">
               <div class="d-flex justify-content-between">
                <p class="text-danger h6 border-bottom">@user: <%= comment.author.username %> </p>
                <% if(comment.author.username == currentUser.username){ %> 
                  <div class="dropdown">
                  <i class="fa fa-ellipsis-h fa-lg" data-bs-toggle="dropdown"></i>
                <ul class="dropdown-menu">
                  <li class="dropdown-item">
                    <form action="#" method="post">
                      <button class="btn" type="submit">Edit</button>
                    </form>
                </li>
                  <li class="dropdown-item">
                    <form action="/post/<%= post._id %>/comments/<%= comment._id %>?_method=delete" method="post">
                      <button class="btn" type="submit">Delete</button>
                    </form>
                </li>
                </ul>
              </div>
              <% } %> 
              </div>
              <p class="h6"><%= comment.body %></p>
              </div>
            <% } %> 
 
          </div>
        </div>
        </div>
      </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>